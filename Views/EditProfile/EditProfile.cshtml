@{
    ViewData["Title"] = "Edit Profile";
}
<link rel="stylesheet" href="~/css/EditProfile.css" />
<link rel="stylesheet" href="~/css/NavBar.css" />

<div class="CenterContainer">
    <div class="EditProfileContainer">

        <div class="EditProfileHeader">
            EDIT PROFILE
            <hr class="EditProfileLine">
        </div>

        <div class="EditFormContainer">
            <div class="ProfilePartContainer">
                <div class="text-sm ProfileSubContainer">
                    PROFILE PICTURE

                    <div class="ProfilePicture">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48" fill="none">
                            <path d="M40 42V38C40 35.8783 39.1571 33.8434 37.6569 32.3431C36.1566 30.8429 34.1217 30 32 30H16C13.8783 30 11.8434 30.8429 10.3431 32.3431C8.84285 33.8434 8 35.8783 8 38V42" stroke="#3F2E3E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M24 22C28.4183 22 32 18.4183 32 14C32 9.58172 28.4183 6 24 6C19.5817 6 16 9.58172 16 14C16 18.4183 19.5817 22 24 22Z" stroke="#3F2E3E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>

                    <button class="UploadButton">
                        <div class="UploadButtonText">
                            <div class="UploadIcon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                    <path d="M14 10V12.6667C14 13.0203 13.8595 13.3594 13.6095 13.6095C13.3594 13.8595 13.0203 14 12.6667 14H3.33333C2.97971 14 2.64057 13.8595 2.39052 13.6095C2.14048 13.3594 2 13.0203 2 12.6667V10M11.3333 5.33333L8 2M8 2L4.66667 5.33333M8 2V10" stroke="#1E1E1E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </div>
                            <div class="text-xs">
                                UPLOAD PHOTO
                            </div>
                        </div>
                    </button>
                </div>
            </div>

            <form class="InputFieldsContainer">
                <input type="text" class="EditInput text-sm font-semilight" placeholder="USERNAME" />
                <input type="text" class="EditInput text-sm font-semilight" placeholder="FIRST NAME" />
                <input type="text" class="EditInput text-sm font-semilight" placeholder="LAST NAME" />

                <div class="DateAndGenderContainer">
                    <div class="ChoosingContainer text-sm font-semilight">
                        DATE OF BIRTH

                        <div class="ChoosingInputContainer">
                            <input type="date" class="InputSelection" />
                        </div>
                    </div>

                    <div class="ChoosingContainer text-sm font-semilight">
                        GENDER
                        <div class="ChoosingInputContainer">
                            <select class="InputSelection" required>
                                <option value="" disabled selected hidden>CHOOSE GENDER</option>
                                <option value="male">MALE</option>
                                <option value="female">FEMALE</option>
                            </select>
                        </div>
                    </div>
                </div>
            </form>

            <div class="Tags">
                <div class="TagsSubHeader text-xs font-semilight">
                    <div class="TagsMainHeader text-sm font-semilight">
                        TAGS
                    </div>
                    CHOOSE A TAG THAT HELP OTHERS KNOW ABOUT YOU.
                </div>

                <div class="TagsContainer">
                    <div class="TagsRowContainer">

                        <div class="Tag">
                            test
                            <div class="RemoveTagIcon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                                    <path d="M6.47594 6.47623L11.19 11.1903M6.47594 11.1903L11.19 6.47623M14.7255 2.9407C17.9799 6.19506 17.9799 11.4714 14.7255 14.7258C11.4712 17.9802 6.19478 17.9802 2.94041 14.7258C-0.313961 11.4714 -0.313961 6.19506 2.94041 2.9407C6.19478 -0.313673 11.4712 -0.313673 14.7255 2.9407Z" stroke="#1E1E1E" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </div>
                        </div>

                        <div class="AddTag text-xl font-regular">
                            +
                        </div>

                    </div>
                    <div class="TagsRowContainer">

                    </div>
                </div>
            </div>

            <input type="text" class="EditBio text-sm font-semilight" placeholder="BIO" />

        </div>

        <div class="EditProfileSubmit">
            <button class="UpdateButton text-lg font-semilight">UPDATE</button>
        </div>
    </div>
</div>