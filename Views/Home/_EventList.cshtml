        <div class="EventData">
            <div class="text-sm font-bold event_title">@item.event_title</div>

            <div class="EventDetails">
                <div class="EventLocation">
                    <div class="LocationIcon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="18" viewBox="0 0 14 18" fill="none">
                            <path d="M7 8.75C7.48125 8.75 7.89323 8.57865 8.23594 8.23594C8.57865 7.89323 8.75 7.48125 8.75 7C8.75 6.51875 8.57865 6.10677 8.23594 5.76406C7.89323 5.42135 7.48125 5.25 7 5.25C6.51875 5.25 6.10677 5.42135 5.76406 5.76406C5.42135 6.10677 5.25 6.51875 5.25 7C5.25 7.48125 5.42135 7.89323 5.76406 8.23594C6.10677 8.57865 6.51875 8.75 7 8.75ZM7 15.1813C8.77917 13.5479 10.099 12.0641 10.9594 10.7297C11.8198 9.39531 12.25 8.21042 12.25 7.175C12.25 5.58542 11.7432 4.28385 10.7297 3.27031C9.71615 2.25677 8.47292 1.75 7 1.75C5.52708 1.75 4.28385 2.25677 3.27031 3.27031C2.25677 4.28385 1.75 5.58542 1.75 7.175C1.75 8.21042 2.18021 9.39531 3.04063 10.7297C3.90104 12.0641 5.22083 13.5479 7 15.1813ZM7 17.5C4.65208 15.5021 2.89844 13.6464 1.73906 11.9328C0.579688 10.2193 0 8.63333 0 7.175C0 4.9875 0.703646 3.24479 2.11094 1.94688C3.51823 0.648958 5.14792 0 7 0C8.85208 0 10.4818 0.648958 11.8891 1.94688C13.2964 3.24479 14 4.9875 14 7.175C14 8.63333 13.4203 10.2193 12.2609 11.9328C11.1016 13.6464 9.34792 15.5021 7 17.5Z" fill="#1D1B20"/>
                        </svg>
                    </div>
                    <div class="text-sm font-regular event_location">@item.location?.FirstOrDefault()</div>
                </div>

                <div class="EventDuration">
                    <div class="CalendarIcon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" viewBox="0 0 21 21" fill="none">
                            <path d="M14 1.75V5.25M7 1.75V5.25M2.625 8.75H18.375M4.375 3.5H16.625C17.5915 3.5 18.375 4.2835 18.375 5.25V17.5C18.375 18.4665 17.5915 19.25 16.625 19.25H4.375C3.4085 19.25 2.625 18.4665 2.625 17.5V5.25C2.625 4.2835 3.4085 3.5 4.375 3.5Z" stroke="#1E1E1E" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <div class="text-sm font-regular event_start_end_date">@(item.start_date?.ToString("dd/MM/yyyy") ?? "N/A") - @(item.end_date?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                </div>

                <div class="text-sm font-regular event_attendees_remaining">REMAINING: @item.event_attendees_remaining person</div>
            </div>
        </div>
        
        <div class="font-regular event_tag">@item.event_tag?.FirstOrDefault()?.ToUpper()</div>
    </div>
}
